{
    "name": "mobtimer",
    "private": true,
    "version": "2.7.2",
    "description": "Mob timer",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "update": "npx @neutralinojs/neu update",
        "start": "npx @neutralinojs/neu run -- --window-enable-inspector",
        "build": "npx @neutralinojs/neu build --release --embed-resources",
        "package": "node package-release.js",
        "release": "npm run build && npm run package",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jouni-kantola/mobtimer.git"
    },
    "author": "Jouni Kantola <jouni@kantola.se> (https://github.com/jouni-kantola)",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jouni-kantola/mobtimer/issues"
    },
    "homepage": "https://github.com/jouni-kantola/mobtimer#readme",
    "dependencies": {
        "@neutralinojs/lib": "^6.4.0",
        "nanoid": "^5.1.6",
        "vue": "^3.5.27"
    },
    "devDependencies": {
        "@neutralinojs/neu": "^11.6.0",
        "@types/node": "^24.10.9",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitest/coverage-v8": "^4.0.17",
        "@vue/test-utils": "^2.4.6",
        "adm-zip": "^0.5.16",
        "husky": "^9.1.7",
        "jsdom": "^27.4.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.0",
        "rcedit": "^5.0.2",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.17",
        "vue-tsc": "^3.2.2"
    },
    "lint-staged": {
        "**/*": "npx prettier --write --ignore-unknown"
    }
}
