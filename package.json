{
    "name": "mobtimer",
    "private": true,
    "version": "2.5.0",
    "description": "Mob timer",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "update": "npx @neutralinojs/neu update",
        "start": "concurrently \"vite build --watch\" \"npx @neutralinojs/neu run -- --window-enable-inspector\"",
        "build": "vue-tsc --noEmit && vite build && npx @neutralinojs/neu build --release",
        "package": "node package-release.js",
        "release": "npm run build && npm run package",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jouni-kantola/mobtimer.git"
    },
    "author": "Jouni Kantola <jouni@kantola.se> (https://github.com/jouni-kantola)",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jouni-kantola/mobtimer/issues"
    },
    "homepage": "https://github.com/jouni-kantola/mobtimer#readme",
    "dependencies": {
        "@neutralinojs/lib": "^3.12.0",
        "vue": "^3.3.4"
    },
    "devDependencies": {
        "@neutralinojs/neu": "^9.7.0",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vue/test-utils": "^2.4.1",
        "adm-zip": "^0.5.10",
        "concurrently": "^8.2.0",
        "cpy": "^10.1.0",
        "husky": "^8.0.3",
        "jsdom": "^22.1.0",
        "lint-staged": "^13.2.2",
        "prettier": "^3.0.1",
        "rcedit": "^3.1.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.8",
        "vitest": "^0.34.1",
        "vue-tsc": "^1.8.8"
    },
    "lint-staged": {
        "**/*": "npx prettier --write --ignore-unknown"
    }
}
