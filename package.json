        "release": "npm run build && npm run package",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jouni-kantola/mobtimer.git"
    },
    "author": "Jouni Kantola <jouni@kantola.se> (https://github.com/jouni-kantola)",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jouni-kantola/mobtimer/issues"
    },
    "homepage": "https://github.com/jouni-kantola/mobtimer#readme",
    "dependencies": {
        "@neutralinojs/lib": "^5.1.0",
        "nanoid": "^5.0.8",
        "vue": "^3.5.13"
    },
    "devDependencies": {
        "@neutralinojs/neu": "^11.3.0",
        "@vitejs/plugin-vue": "^5.2.0",
        "@vitest/coverage-v8": "^1.6.0",
        "@vue/test-utils": "^2.4.6",
        "adm-zip": "^0.5.16",
        "husky": "^9.1.7",
        "jsdom": "^24.1.3",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "rcedit": "^4.0.1",
        "typescript": "^5.6.3",
        "vite": "^5.4.11",
        "vitest": "^1.6.0",
        "vue-tsc": "^2.1.10"
    },
    "lint-staged": {
        "**/*": "npx prettier --write --ignore-unknown"
    }
